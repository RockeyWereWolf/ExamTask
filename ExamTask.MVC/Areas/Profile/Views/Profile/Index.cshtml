﻿@{
    ViewData["Title"] = "General Info";
}

@model UserDetailDTO

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">User Info</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <tbody>
                        <tr>
                            <td>Username: @Model.UserName</td>
                        </tr>
                        <tr>
                            <td>Name: @Model.Name</td>
                        </tr>
                        <tr>
                            <td>Surname: @Model.Surname</td>
                        </tr>
                        @if (User.IsInRole(nameof(Roles.Student)))
                        {
                            <tr>
                                <td>Grade: @Model.ClassNumber</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>


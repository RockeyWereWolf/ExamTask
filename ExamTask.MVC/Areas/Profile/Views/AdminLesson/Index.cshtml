﻿@{
    ViewData["Title"] = "Lesson CRUD";
}

@model IEnumerable<LessonListDTO>

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Lesson Table</h6>
            <a asp-action="Create" class="btn btn-outline-success">Create</a>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Lesson</th>
                            <th>Grade</th>
                            <th>Teacher</th>
                            <th colspan="2" style="text-align:center">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (!Model.Any())
                        {
                            <tr>
                                <td colspan="6" style="text-align:center">NO DATA</td>
                            </tr>
                        }
                        else
                        {
                            foreach (var lesson in Model)
                            {
                                <tr>
                                    <td>@lesson.Id</td>
                                    <td>@lesson.LessonName</td>
                                    <td>@lesson.ClassNumber</td>
                                    <td>@lesson.TeacherSurname @lesson.TeacherName</td>
                                    <td><a class="btn btn-outline-info" asp-action="Update" asp-route-id="@lesson.Id">Update</a></td>
                                    <td><a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@lesson.Id">Delete</a></td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<!-- /.container-fluid -->
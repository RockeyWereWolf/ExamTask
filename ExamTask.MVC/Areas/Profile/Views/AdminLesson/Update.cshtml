﻿@{
    ViewData["Title"] = "Update Lesson";
}

@model LessonUpdateDTO

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">@ViewData["Title"] </h6>
        </div>
        <div class="card-body">
            <form action="" method="post">
                <div class="form-group">
                    <label asp-for="LessonName">Lesson</label>
                    <input asp-for="LessonName" class="form-control">
                    <span asp-validation-for="LessonName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ClassNumber">Grade</label>
                    <input asp-for="ClassNumber" class="form-control">
                    <span asp-validation-for="ClassNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="TeacherId">Teacher</label>
                    <select class="form-control" asp-for="TeacherId" asp-items='@new SelectList(ViewBag.Teachers, "Id" , "DisplayName")'>
                        <option disabled selected>Select Teacher</option>
                    </select>
                    <span asp-validation-for="TeacherId" class="text-danger"></span>
                </div>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <button class="btn btn-success">Submit</button>
            </form>
        </div>
    </div>
</div>